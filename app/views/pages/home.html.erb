      
  <% if user_signed_in? && !current_user.pilot %>
    <h2>Welcome! <%= current_user.first_name %></h2>
    <%= simple_form_for :search, url: root_path, method: "GET" do |f| %>
      <%= f.input :origin, collection: Set.new(Trip.pluck(:origin) + Trip.pluck(:destination)) %>
      <%= f.input :destination, collection: Set.new(Trip.pluck(:origin) + Trip.pluck(:destination)) %>
      <%= f.input :launch_date, collection: Trip.pluck(:launch_date) %>
      <%= f.submit 'Find a Trip', class: 'btn btn-primary' %>
    <% end %>
    <%= @trips.each do |trip|%>
      <%= trip.origin %>
      <%= trip.destination %>
      <%= trip.launch_date %>
    <% end %>
  <% end %>

  <% if user_signed_in? && current_user.pilot %>
    <div class="container d-flex flex-column align-items-center justify-center py-5 mt-5">
      <h2>Welcome! <%= current_user.first_name.capitalize %></h2>
      <div class="card-product">
        <%= image_tag "card-backgroud" %>
        <div class="card-product-infos p-5">
          <h2><strong>As a Pilot</strong>, you can create your own trips:</h2>
          <%= link_to 'Create your Trip',  new_trip_path, class: 'btn btn-primary btn-space mt-5'  %>
        </div>
      </div>
    </div>
  <% end %>

  <% unless user_signed_in? %>
    <div class="container d-flex flex-column align-items-center justify-center glow">
      <h1>Welcome to Cosmonaut <i class="fas fa-space-shuttle header-icon"></i></h1><br>
      <h2>your best friend to travel the universe</h2>
    </div>
  <% end %>